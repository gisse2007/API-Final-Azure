{
	"info": {
		"name": "ClientesAPI",
		"description": "API para gestión de clientes",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Obtener todos los clientes",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/clientes",
					"host": ["{{baseUrl}}"],
					"path": ["api", "clientes"]
				}
			}
		},
		{
			"name": "Crear cliente",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"nombre\": \"Juan Pérez\",\n  \"email\": \"juan@email.com\",\n  \"telefono\": \"123456789\",\n  \"direccion\": \"Calle 123\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/clientes",
					"host": ["{{baseUrl}}"],
					"path": ["api", "clientes"]
				}
			}
		},
		{
			"name": "Obtener cliente por ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/clientes/1",
					"host": ["{{baseUrl}}"],
					"path": ["api", "clientes", "1"]
				}
			}
		},
		{
			"name": "Obtener cliente por email",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/clientes/email/juan@email.com",
					"host": ["{{baseUrl}}"],
					"path": ["api", "clientes", "email", "juan@email.com"]
				}
			}
		},
		{
			"name": "Obtener clientes activos",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/clientes/activos",
					"host": ["{{baseUrl}}"],
					"path": ["api", "clientes", "activos"]
				}
			}
		},
		{
			"name": "Actualizar cliente",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"nombre\": \"Juan Pérez Actualizado\",\n  \"email\": \"juan@email.com\",\n  \"telefono\": \"987654321\",\n  \"direccion\": \"Nueva Calle 456\",\n  \"activo\": true\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/clientes/1",
					"host": ["{{baseUrl}}"],
					"path": ["api", "clientes", "1"]
				}
			}
		},
		{
			"name": "Cambiar estado cliente",
			"request": {
				"method": "PATCH",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/clientes/1/estado?activo=false",
					"host": ["{{baseUrl}}"],
					"path": ["api", "clientes", "1", "estado"],
					"query": [
						{
							"key": "activo",
							"value": "false"
						}
					]
				}
			}
		},
		{
			"name": "Verificar si existe cliente",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/clientes/1/exists",
					"host": ["{{baseUrl}}"],
					"path": ["api", "clientes", "1", "exists"]
				}
			}
		},
		{
			"name": "Eliminar cliente",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/clientes/1",
					"host": ["{{baseUrl}}"],
					"path": ["api", "clientes", "1"]
				}
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "https://localhost:7000"
		}
	]
}